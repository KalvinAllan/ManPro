<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/recycler"
    >

    <TextView
        android:id="@+id/DeskripsiKoleksi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spartanmedium"
        android:layout_marginTop="15dp"
        android:text="Deskripsi"
        android:textColor="@color/black"
        android:textSize="17.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKoleksi" />

    <ImageView
        android:id="@+id/imageViewKoleksi"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kapalselam" />


</androidx.constraintlayout.widget.ConstraintLayout>